{
  "name": "ariaieboy/jalali",
  "description": "This Package helps developers to easily work with Jalali (Shamsi or Iranian) dates in php appliations, based on Jalali (Shamsi) DateTime class.",
  "keywords": [
    "ariaieboy",
    "jalali",
    "shamsi",
    "persian-calendar"
  ],
  "homepage": "https://github.com/ariaieboy/jalali",
  "license": "MIT",
  "authors": [
    {
      "name": "Milad Rey",
      "email": "miladr@gmail.com"
    },
    {
      "name": "Morteza Parvini",
      "email": "m.parvini@outlook.com"
    },
    {
      "name": "AriaieBOY",
      "email": "ariaieboy.ir@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "~8.2||~8.3",
    "nesbot/carbon": "^2||^3"
  },
  "require-dev": {
    "pestphp/pest": "^2.15",
    "laravel/pint": "^1.0",
    "phpstan/phpstan": "^1"
  },
  "autoload": {
    "psr-4": {
      "Ariaieboy\\Jalali\\": "src"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Ariaieboy\\Jalali\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
